[run]
source = packages/, src/
omit =
    */tests/*
    */test_*
    */__pycache__/*
    */deprecated/*
    */archive/*
    */experimental/*
    */stubs/*
    */benchmarks/*
    */legacy/*
    */models/*
    */download_env/*
    */scripts/*
    */.claude/*
    */.cache/*
    */tmp/*
    setup.py
    */conftest.py

[report]
# Set the coverage threshold to 60% (will increase to 70% next sprint)
fail_under = 60
precision = 2
show_missing = true
skip_covered = false

exclude_lines =
    pragma: no cover
    def __repr__
    if self.debug:
    if settings.DEBUG
    raise AssertionError
    raise NotImplementedError
    if 0:
    if __name__ == .__main__.
    class .*\bProtocol\):
    @(abc\.)?abstractmethod

[html]
directory = htmlcov
title = AIVillage Coverage Report

[xml]
output = coverage.xml
