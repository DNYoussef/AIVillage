prefix=@CMAKE_INSTALL_PREFIX@
exec_prefix=${prefix}
libdir=${exec_prefix}/lib
includedir=${prefix}/include

Name: Betanet
Description: Betanet C FFI library for secure networking and transport protocols
Version: @PROJECT_VERSION@
URL: https://github.com/betanet/betanet-bounty

Requires:
Libs: -L${libdir} -lbetanet_c
Libs.private: -lpthread -lm -ldl @PLATFORM_LIBS@
Cflags: -I${includedir}
