# AIVillage Environment Configuration
# Copy this file to .env and update with your secure values
# NEVER commit .env files to version control

# =============================================================================
# CRITICAL SECURITY CONFIGURATION
# =============================================================================

# JWT Secret for authentication (REQUIRED - minimum 32 characters)
# Generate with: openssl rand -hex 32
# Or: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET=your_super_secure_jwt_secret_key_at_least_32_characters_long_12345678

# Application secret key (REQUIRED - minimum 32 characters)
# Generate with: openssl rand -hex 32
SECRET_KEY=your_super_secure_app_secret_key_at_least_32_characters_long_12345678

# API Gateway Key (REQUIRED)
# Generate with: openssl rand -hex 16
API_KEY=your_secure_api_key_for_gateway_access_123456789

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=aivillage
DATABASE_USER=postgres
DATABASE_PASSWORD=your_secure_database_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password
REDIS_DATABASE=0

# =============================================================================
# EXTERNAL SERVICE CONFIGURATION
# =============================================================================

# OpenAI API Key (if using OpenAI services)
OPENAI_API_KEY=your_openai_api_key_here

# Other AI/ML Service Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
HUGGINGFACE_API_TOKEN=your_huggingface_token_here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment
NODE_ENV=development
PYTHON_ENV=development
DEBUG=false

# Server Configuration
GATEWAY_HOST=0.0.0.0
GATEWAY_PORT=8000
TWIN_HOST=0.0.0.0
TWIN_PORT=8001

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Log Level
LOG_LEVEL=INFO
LOG_FORMAT=json

# Metrics
ENABLE_METRICS=true
METRICS_PORT=9090

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Session Configuration
SESSION_TIMEOUT_HOURS=24
JWT_EXPIRATION=3600

# Multi-Factor Authentication
MFA_ENABLED=false
MFA_ISSUER=AIVillage

# =============================================================================
# DEVELOPMENT ONLY (Remove in production)
# =============================================================================

# Development flags (set to false in production)
ALLOW_HTTP=false
DISABLE_SSL_VERIFY=false
ENABLE_DEBUG_ENDPOINTS=false