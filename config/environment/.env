# Village Agent Environment Configuration
# Copy to .env for local development

# Security Configuration
JWT_SECRET=production_jwt_secret_key_32_chars_minimum_secure_random_string_here
API_KEY=production_api_key_secure_random_64_character_string_for_authentication

# Database Configuration  
DATABASE_URL=sqlite:///./village_data.db
REDIS_URL=redis://localhost:6379/0

# Village Agent Configuration
VILLAGE_AGENT_ID=village_agent_001
VILLAGE_AGENT_TYPE=village_integration
AIVILLAGE_DEV_MODE=true

# Performance Configuration
MAX_CONCURRENT_TASKS=10
REQUEST_TIMEOUT_MS=30000
HEALTH_CHECK_INTERVAL_MS=60000

# Feature Flags
ENABLE_DAILY_REFINEMENT=true
ENABLE_SURPRISE_DETECTION=true
ENABLE_HYPERRAG=true
ENABLE_MULTIMODAL_IO=true

# Deployment Configuration
DEPLOYMENT_ENV=production
LOG_LEVEL=INFO
DEBUG=false