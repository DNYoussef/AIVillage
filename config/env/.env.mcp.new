# MCP Server Environment Configuration
# Copy this to .env and configure with your actual tokens

# GitHub MCP Server
GITHUB_PERSONAL_ACCESS_TOKEN=

# Hugging Face MCP Server
HF_TOKEN=

# Firecrawl MCP Server
FIRECRAWL_API_KEY=

# Apify MCP Server
APIFY_TOKEN=

# Memory MCP Server
MEMORY_FILE_PATH=./.mcp/memory.db

# Markdown MCP Server
MARKDOWN_ROOT_PATH=./docs

# Deep Wiki MCP Server
WIKI_ROOT_PATH=./knowledgebase

# Context7 MCP Server
AUTO_INDEX=true
WORKSPACE_ROOT=.

# HypeRAG MCP Server
HYPERAG_CONFIG_PATH=./configs/hyperag_mcp.yaml
HYPERAG_LOG_LEVEL=INFO
HYPERAG_ENABLE_DEBUG=false

# Python Path for custom servers
PYTHONPATH=.
