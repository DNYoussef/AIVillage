{
  "automation_style_guide": {
    "version": "1.0.0",
    "description": "Style guide configuration for automation scripts",

    "header_requirements": {
      "shebang": "#!/usr/bin/env python3",
      "encoding_declaration": false,
      "module_docstring": true,
      "copyright_notice": false
    },

    "imports": {
      "organization": {
        "sections": ["standard", "third_party", "local"],
        "sort_within_sections": true,
        "separate_sections": true
      },
      "restrictions": {
        "star_imports": false,
        "relative_imports": "allowed_for_local"
      }
    },

    "naming_conventions": {
      "functions": "snake_case",
      "classes": "PascalCase",
      "constants": "UPPER_CASE",
      "variables": "snake_case",
      "modules": "snake_case",
      "packages": "snake_case"
    },

    "documentation": {
      "module_docstring": true,
      "function_docstrings": true,
      "class_docstrings": true,
      "type_hints": true,
      "docstring_style": "google"
    },

    "code_structure": {
      "max_function_length": 50,
      "max_class_length": 200,
      "max_line_length": 88,
      "max_complexity": 10,
      "max_nested_blocks": 4
    },

    "security": {
      "no_hardcoded_secrets": true,
      "no_shell_injection": true,
      "no_eval_exec": true,
      "validate_inputs": true
    },

    "performance": {
      "no_unnecessary_loops": true,
      "efficient_data_structures": true,
      "lazy_evaluation": "preferred",
      "memory_efficiency": true
    },

    "error_handling": {
      "specific_exceptions": true,
      "no_bare_except": true,
      "proper_cleanup": true,
      "logging_on_errors": true
    },

    "automation_specific": {
      "progress_indicators": true,
      "configurable_timeouts": true,
      "graceful_interruption": true,
      "idempotent_operations": "preferred",
      "comprehensive_logging": true
    },

    "testing": {
      "unit_tests": "required_for_core_functions",
      "integration_tests": "recommended",
      "error_path_testing": true,
      "mock_external_dependencies": true
    }
  },

  "tool_configurations": {
    "ruff": {
      "enabled": true,
      "auto_fix": true,
      "rules": {
        "line_length": 88,
        "select": ["E", "W", "F", "I", "N", "D", "UP", "S", "B", "C4"],
        "ignore": ["D100", "D101", "D102", "D103", "T201"]
      }
    },

    "black": {
      "enabled": true,
      "line_length": 88,
      "target_version": ["py310", "py311", "py312"]
    },

    "mypy": {
      "enabled": true,
      "strict_mode": false,
      "ignore_missing_imports": true,
      "check_untyped_defs": true
    },

    "bandit": {
      "enabled": true,
      "security_level": "medium",
      "exclude_tests": true
    }
  },

  "exemptions": {
    "legacy_scripts": {
      "files": ["old_migration_*.py", "legacy_*.py"],
      "relaxed_rules": ["D", "ANN", "UP"]
    },

    "generated_scripts": {
      "files": ["*_generated.py", "auto_*.py"],
      "relaxed_rules": ["D", "N", "E501"]
    }
  },

  "reporting": {
    "output_format": "detailed",
    "include_metrics": true,
    "save_reports": true,
    "report_directory": "reports/style_checks/"
  }
}
