# Development Environment Configuration
# Simplified settings for local development without authentication requirements

# Environment
AIVILLAGE_ENV=development
AIVILLAGE_DEBUG_MODE=true
AIVILLAGE_LOG_LEVEL=DEBUG

# Redis - Disabled for development to avoid authentication issues
REDIS_HOST=localhost
REDIS_PORT=6379
DISABLE_REDIS=true
# REDIS_PASSWORD= (intentionally empty for development)

# Database paths
AIVILLAGE_DB_PATH=./data/evolution_metrics.db
AIVILLAGE_STORAGE_BACKEND=sqlite

# RAG System - Use disk cache as fallback
RAG_CACHE_ENABLED=true
RAG_REDIS_URL=redis://localhost:6379/1
RAG_DISK_CACHE_DIR=./data/rag_disk_cache
RAG_EMBEDDING_MODEL=paraphrase-MiniLM-L3-v2
RAG_DEVICE=auto

# GPU/Device Configuration
CUDA_VISIBLE_DEVICES=
TORCH_DEVICE=auto
# Force CPU mode for consistency in development
RAG_FORCE_CPU=true

# API Ports
DIGITAL_TWIN_API_PORT=8080
EVOLUTION_METRICS_API_PORT=8081
RAG_PIPELINE_API_PORT=8082

# Fallback storage enabled
FALLBACK_STORAGE_ENABLED=true